{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "windows-clang",
      "hidden": false,
      "generator": "Ninja",
      "description": "LLVM + CLang + Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "toolchainFile": "${sourceDir}/toolchain.cmake"
    },
    {
      "name": "mingw",
      "hidden": false,
      "generator": "Ninja",
      "description": "MinGW-w64 + Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "toolchainFile": "${sourceDir}/toolchain.cmake"
    }
  ]
}