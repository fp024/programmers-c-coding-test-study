{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-clang",
      "hidden": false,
      "generator": "Ninja",
      "description": "LLVM + CLang + Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-O2 -Wno-unused-result"
      },
      "toolchainFile": "${sourceDir}/toolchains/windows-clang.cmake"
    },
    {
      "name": "mingw",
      "hidden": false,
      "generator": "Ninja",
      "description": "MinGW-w64 + Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-O2 -Wno-unused-result"
      },
      "toolchainFile": "${sourceDir}/toolchains/mingw.cmake"
    }
  ]
}